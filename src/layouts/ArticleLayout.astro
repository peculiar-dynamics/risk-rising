---
import BaseLayout from "~/layouts/BaseLayout.astro"

const { frontmatter } = Astro.props;
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.preview}
  type="article"
>
  <section
    class="container my-16 flex h-full flex-auto flex-col items-center justify-center p-4 sm:p-8"
  >
    <slot />
  </section>
</BaseLayout>
